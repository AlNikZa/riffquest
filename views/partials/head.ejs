<!-- Document head: contains metadata, styles, and fonts -->
<head>
  <!-- Character encoding -->
  <meta charset="UTF-8" />

  <!-- Responsive viewport for mobile devices -->
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />

  <!-- Additional meta tags injected dynamically if provided -->
  <% if (typeof headExtra !== 'undefined') { %> <%- headExtra %> <% } %>

  <!-- Page title -->
  <title><%= title %></title>

  <!-- Favicon -->
  <link rel="icon" href="/logo.png" type="image/svg+xml" />

  <!-- Preconnect for faster Google Fonts loading -->
  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />

  <!-- Google Fonts: Coda -->
  <link
    href="https://fonts.googleapis.com/css2?family=Coda:wght@400;800&display=swap"
    rel="stylesheet"
  />

  <!-- Bootstrap CSS -->
  <link
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css"
    rel="stylesheet"
    integrity="sha384-sRIl4kxILFvY47J16cr9ZwB07vP4J8+LH7qKQnuqkuIAvNWLzeN8tE5YBujZqJLB"
    crossorigin="anonymous"
  />

  <!-- Bootstrap Icons -->
  <link
    rel="stylesheet"
    href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css"
  />

  <!-- Custom styles -->
  <style>
    /* Set default font for all elements */
    * {
      font-family: 'Coda', system-ui, sans-serif;
      font-weight: 400;
    }

    /* Body background and padding to avoid navbar overlap */
    body {
      background-color: #f8f9fa;
      padding-top: 60px;
    }

    /* Customize navbar toggler color */
    .navbar-toggler {
      color: white;
    }
    /* Change dropdown item background on hover */
    .navbar .dropdown-menu .dropdown-item:hover {
      background-color: #198754; /* Bootstrap "success" color */
      color: #fff; /* optional: white text */
    }
  </style>
</head>
