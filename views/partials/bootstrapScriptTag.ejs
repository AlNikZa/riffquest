<!-- Include Bootstrap JS bundle (includes Popper for tooltips, dropdowns, etc.) -->
<script
  src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js"
  integrity="sha384-FKyoEForCGlyvwx9Hj09JcYn3nv7wiPVlz7YYwJrWVcXK/BmnVDxM+D2scQbITxI"
  crossorigin="anonymous"
></script>

<!-- Initialize Bootstrap tooltips on all elements with data-bs-toggle="tooltip" -->
<script>
  // Wait for the DOM to fully load
  document.addEventListener('DOMContentLoaded', function () {
    // Select all elements with data-bs-toggle="tooltip"
    const tooltipTriggerList = Array.from(
      document.querySelectorAll('[data-bs-toggle="tooltip"]')
    );

    // Instantiate a Bootstrap Tooltip for each element
    const tooltipList = tooltipTriggerList.map(
      (el) => new bootstrap.Tooltip(el)
    );
  });
</script>
