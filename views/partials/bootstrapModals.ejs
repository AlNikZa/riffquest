<!-- Modal for Artist Actions -->
<!-- Container for the modal with unique ID and accessibility attributes -->
<div
  class="modal fade"
  id="artistModal"
  tabindex="-1"
  aria-labelledby="choiceModalLabel"
  aria-hidden="true"
>
  <!-- Modal dialog wrapper -->
  <div class="modal-dialog">
    <div class="modal-content">
      <!-- Modal header: contains the title and close button -->
      <div class="modal-header">
        <h5 class="modal-title" id="choiceModalLabel">Choose an action</h5>
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="modal"
          aria-label="Close"
        ></button>
      </div>

      <!-- Modal body: content will be dynamically injected here -->
      <div class="modal-body" id="choiceModalBody"></div>

      <!-- Modal footer: action buttons for artist options -->
      <div class="modal-footer">
        <button type="button" class="btn btn-success" id="viewAlbumsBtn">
          View all albums
        </button>
        <button type="button" class="btn btn-success" id="viewTracksBtn">
          View top tracks
        </button>
        <button type="button" class="btn btn-success" id="viewInfoBtn">
          View artist details
        </button>
      </div>
    </div>
  </div>
</div>
